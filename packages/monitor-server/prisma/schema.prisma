generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}
generator typegraphql {
  provider = "typegraphql-prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Listing {
  price             BigInt
  erc20TokenAddress String
  erc20TokenName    String
}

type Offer {
  buyer String
  nftAddress String
  tokenId BigInt
  listing Listing
}

model NftMarketplace__ItemListed {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  seller String
  nftAddress String
  tokenId BigInt
  listing Listing
  chainId BigInt @default(31337)
}

model NftMarketplace__ItemCanceled {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  seller String
  nftAddress String
  tokenId BigInt
  chainId BigInt @default(31337)
}

model NftMarketplace__ItemBought {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  buyer String
  nftAddress String
  tokenId BigInt
  listing Listing
  chainId BigInt @default(31337)
}

model NftMarketplace__ItemOfferMade {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  offerId BigInt
  offer Offer
  chainId BigInt @default(31337)
}

model ActiveItem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  seller String
  nftAddress String
  tokenId BigInt
  listing Listing
  chainId BigInt @default(31337) 
  nft NFT?
}

model UserProfile {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  address String @unique
  username String?
  bio String?
  url String?
  avatar String?
  banner String?
  importedNFTs NFT[]  // One-to-many relation
}

model NFT {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  contractAddress     String       // NFT contract address
  tokenId      BigInt
  importedAt   DateTime     @default(now())
  user         UserProfile  @relation(fields: [userId], references: [id])
  userId       String       // Foreign key
   // ðŸ”— Relation to Collection
  collection   Collection   @relation(fields: [collectionId], references: [id])
  collectionId String

  activeItem ActiveItem? @relation(fields: [activeItemId],references: [id])
  activeItemId String? @unique

  @@unique([contractAddress,tokenId,collectionId])
}

model Collection {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  address       String         @unique              // contract address
  createdAt      DateTime       @default(now())
  chainId  BigInt
  importedNfts   NFT[]  // One-to-many relation
  @@unique([address,chainId])
}