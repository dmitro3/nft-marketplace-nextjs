generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}
generator typegraphql {
  provider = "typegraphql-prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Listing {
  price             BigInt
  erc20TokenAddress String
  erc20TokenName    String
}

type Offer {
  buyer String
  nftAddress String
  tokenId BigInt
  listing Listing
}

model NftMarketplace__ItemListed {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  seller String
  nftAddress String
  tokenId BigInt
  listing Listing
  chainId BigInt @default(31337)
}

model NftMarketplace__ItemCanceled {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  seller String
  nftAddress String
  tokenId BigInt
  chainId BigInt @default(31337)
}

model NftMarketplace__ItemBought {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  buyer String
  nftAddress String
  tokenId BigInt
  listing Listing
  chainId BigInt @default(31337)
}

model NftMarketplace__ItemOfferMade {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  offerId BigInt
  offer Offer
  chainId BigInt @default(31337)
}

model ActiveItem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  seller String
  nftAddress String
  tokenId BigInt
  listing Listing
  chainId BigInt @default(31337) 
}